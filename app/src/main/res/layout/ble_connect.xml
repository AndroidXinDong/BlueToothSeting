<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_ble"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@mipmap/pink"
    android:orientation="vertical"
    android:weightSum="6"
    android:visibility="gone"
    android:gravity="center">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center_vertical"
        android:padding="3dp">
        <TextView
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:text="仪器ID" />

        <EditText
            android:id="@+id/et_machine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLength="14"
            android:textSize="18sp"
            android:text="XG202003110001"
            android:textColor="@color/black"
            android:background="@drawable/et_shape" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center_vertical"
        android:padding="3dp">
        <TextView
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:text="蓝眼名称" />

        <EditText
            android:id="@+id/et_bleName"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLength="15"
            android:background="@drawable/et_shape" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center_vertical"
        android:padding="3dp">
        <TextView
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:text="蓝牙密码" />

        <EditText
            android:id="@+id/et_blePass"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:imeOptions="actionNext"
            android:singleLine="true"
            android:maxLength="15"
            android:background="@drawable/et_shape" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center_vertical"
        android:padding="3dp">
        <TextView
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center_horizontal"
            android:text="产品日期" />

        <EditText
            android:id="@+id/et_machineDate"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textSize="18sp"
            android:imeOptions="actionDone"
            android:singleLine="true"
            android:maxLength="15"
            android:textColor="@color/black"
            android:background="@drawable/et_shape" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:weightSum="4"
        android:gravity="center_vertical"
        android:padding="3dp">
        <TextView
            android:layout_margin="3dp"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textSize="18sp"
            android:gravity="center"
            android:text="设备类型" />

        <Spinner
            android:id="@+id/spinner_ble"
            android:layout_width="0dp"
            android:layout_height="48dp"
            android:layout_weight="2"
            android:textSize="18sp"
            android:textColor="@color/black"
            android:background="@drawable/et_shape"
            android:entries="@array/machineType"/>
    </LinearLayout>
    <Button
        android:id="@+id/btn_set"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="设置"/>
</LinearLayout>